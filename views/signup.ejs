<!--
  This is the register page.
  visitors can register using this page, if they have an account they can navigate to Login page using the link provided.
  if user register, they will be redirected to login page
-->
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Register</title>

    <link
      rel="stylesheet"
      href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css"
    />
    <script src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
    <style>
      .panel-info > .panel-heading {
        color: whitesmoke;
        background-color: grey;
        border-color: grey !important;
      }
      .panel-info {
        border-color: grey;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div
        style="margin-top:3.5em;"
        class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2"
      >
        <div class="panel panel-info">
          <div class="panel-heading">
            <div class="panel-title center">Register!</div>
          </div>
          <div class="panel-body">
            <form
              class="form-horizontal"
              role="form"
              method="post"
              action="/register"
            >
              <% if (message && message.length > 0) { %>
              <div class="alert alert-success col-sm-12"><%= message %></div>
              <% } %>
              <div style="display:none" class="alert alert-danger">
                <p>Error:</p>
                <span></span>
              </div>
              <div class="form-group">
                <label for="user_name" class="col-md-3 control-label"
                  >User Name</label
                >
                <div class="col-md-9">
                  <input
                    type="text"
                    class="form-control"
                    name="user_name"
                    placeholder="Enter The Username You want..."
                  />
                </div>
              </div>
              <div class="form-group">
                <label for="name" class="col-md-3 control-label">Name</label>
                <div class="col-md-9">
                  <input
                    type="text"
                    class="form-control"
                    name="name"
                    placeholder="Enter Your Name..."
                  />
                </div>
              </div>
              <div class="form-group">
                <label for="password" class="col-md-3 control-label"
                  >Password</label
                >
                <div class="col-md-9">
                  <input
                    type="password"
                    class="form-control"
                    name="password"
                    placeholder="Enter Password..."
                  />
                </div>
              </div>

              <div class="form-group">
                <!-- Button -->
                <div class="col-md-offset-3 col-md-9">
                  <button id="btn-signup" type="submit" class="btn btn-success">
                    <i class="icon-hand-right"></i> Register
                  </button>
                </div>
                <div class="text-center">
                  Already have an account?
                  <br />
                  <a href="/login">Login</a>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div class="text-center">
      &copy; Mohamed Roza
    </div>
  </body>
</html>
